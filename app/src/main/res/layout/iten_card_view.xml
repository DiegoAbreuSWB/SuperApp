<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iconId"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvVersionName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iconId"
            android:layout_toEndOf="@+id/iconId" />

        <TextView
            android:id="@+id/preco"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/tvVersionName"
            android:layout_toEndOf="@+id/tvVersionName"
            android:layout_toRightOf="@+id/tvVersionName"
            android:text="25,00 R$" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvVersionName"
            android:text="Add" />
    </RelativeLayout>

</android.support.v7.widget.CardView>